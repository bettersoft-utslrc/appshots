<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardV1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#212121"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">


    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/layoutHistorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtUsuarioHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/Usuario"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtLugarHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Lugar"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="normal"


            />

        <TextView
            android:id="@+id/txtFechaHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Fecha"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="normal"


            />


        <TextView
            android:id="@+id/txtEstadoHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Estado"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:textStyle="normal"


            />

        <TextView
            android:id="@+id/txtEstaHist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Estado"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="#484848"
            android:onClick="obtenerCodigo"
            android:text="Codigo"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="#484848"
            android:onClick="cancelarReservacion"
            android:text="Cancelar"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="#484848"
            android:onClick="eliminarReservacion"
            android:text="Eliminar"
            android:textColor="#fff"
            android:visibility="gone" />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.CardView>